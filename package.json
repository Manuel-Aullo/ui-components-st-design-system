  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Manuel-Aullo/ui-components-st-design-system.git"
  },
  "homepage": " https://manuel-aullo.github.io/ui-components-st-design-system/",
  "dependencies": {
    "@storybook/addon-a11y": "^6.2.9",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^12.8.3",
    "@types/styled-components": "^5.1.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-responsive": "^8.2.0",
    "react-scripts": "^4.0.3",
    "react-select": "^3.2.0",
